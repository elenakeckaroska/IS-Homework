@model EBilets.Domain.DTO.BilletsByGenreDto

<div class="col-md-4">
    <form asp-action="ExportBilletsByGenre">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="SelectedGenre" class="control-label"></label>
            <select name="SelectedGenre">
                @foreach (var genre in Model.Genres)
                {
                    <option value="@genre">@genre</option>
                }
            </select>
            <span asp-validation-for="Genres" class="text-danger"></span>
        </div>
       
        <div class="form-group">
            <input type="submit" value="Choose Genre" class="btn btn-primary" />
        </div>
    </form>


</div>
